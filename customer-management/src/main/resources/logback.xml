<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />
    <!--
    在src/main/resources下面新建文件logback.xml这个也是spring boot默认的配置文件名,
    如果需要自定义文件名,如:logback-test.xml需要在application.properties添加配置
    logging.config=classpath:logback-test.xml

    base.xml                //基础包,引用了下面所有的配置文件
    console-appender.xml    //控制台输出配置
    defaults.xml            //默认的日志文件配置
    file-appender.xml       //文件输出配置
    -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd} %d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg %n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--<file>E:\data\app\logs\tianan_log.log</file>-->
        <!-- 开启按天生成日志文件 -->
        <Prudent>true</Prudent>
        <!--<file>E:\log\tianan_log.log</file>-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover 保存历史记录到这个文件夹一日起为后缀 -->
            <!--<fileNamePattern>/data/app/logs/web/tianan-web.%d{yyyy-MM-dd}.log</fileNamePattern>-->
            <fileNamePattern>E:\log\customer_management_log.log.%d.log</fileNamePattern>
            <!-- keep 30 days' worth of history -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
       <!-- <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>-->
        <encoder>
            <pattern>%d{yyyy-MM-dd} %d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg %n</pattern>
            <charset>UTF-8</charset> <!-- 此处设置字符集 -->
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="CONSOLE"></appender-ref>
        <appender-ref ref="FILE"></appender-ref>
    </root>
</configuration>